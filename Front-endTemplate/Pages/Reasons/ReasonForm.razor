@inject HttpClient _httpClient;
<EditForm Model=@ReasonDto OnValidSubmit=@OnValidSubmit>
    <div class="banner">
        <h1>Create new agent</h1>
    </div>
    <div class="item">
        <div class="name-item">
            <div>
                <div class="item">
                    <label for="nationality">Name of reason</label>
                    <InputText class="form-control" @bind-Value=@ReasonDto.Name />
                </div>
                <div class="item">
                    <label for="nationality">How muach paid (in range 0..100)</label>
                    <InputNumber  class="form-control" @bind-Value="@ReasonDto.Paid" />
                </div>
            </div>
        </div>
    </div>
    <div class="btn-block">
        <button type="submit" href="/reason">Submit</button>
    </div>
</EditForm>

@code {
    [Parameter]
    public ReasonDto ReasonDto { get; set; }
    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}