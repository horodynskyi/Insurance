@page "/reason/create"
@using System.Net.Http.Json
@inject HttpClient _httpClient;
@inject NavigationManager uriHelper
<h3>Create a new reason</h3>
<ReasonForm ReasonDto=@ReasonDto OnValidSubmit=@Create />
@code {
    ReasonDto ReasonDto = new ReasonDto();

    public async Task Create()
    {
        await _httpClient.PostAsJsonAsync("https://localhost:8080/api/v1/reason",ReasonDto);
        uriHelper.NavigateTo("reason");
    }
}