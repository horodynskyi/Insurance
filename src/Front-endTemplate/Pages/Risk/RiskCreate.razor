@page "/risk/create"
@using System.Net.Http.Json
@inject HttpClient _httpClient;
@inject NavigationManager uriHelper
<h3>Create a new risk</h3>
<RiskForm RiskDto=@RiskDto OnValidSubmit=@Create />
@code {
    RiskDto RiskDto = new RiskDto();

    public async Task Create()
    {
        await _httpClient.PostAsJsonAsync("https://localhost:8080/api/v1/risk",RiskDto);
        uriHelper.NavigateTo("risk");
    }
}